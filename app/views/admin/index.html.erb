<h1>Admin</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Admin Status</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= link_to "Edit", edit_user_path(user) %></td>
        </tr>
    <% end %>
  </tbody>
</table>